# ==============================================
# DATABASE (REQUIRED FOR PRODUCTION)
# ==============================================
# Get from Railway/Vercel Postgres/Supabase/Neon
DATABASE_URL="postgresql://user:password@host:port/dbname?sslmode=require"

# ==============================================
# AI SERVICES (REQUIRED)
# ==============================================

# Groq API (for AI script generation)
GROQ_API_KEY=your_groq_api_key_here

# Gradium AI Voice Generation
# Get API key from: https://gradium.ai
GRADIUM_API_KEY=your_gradium_api_key_here
GRADIUM_WS_URL=wss://us.api.gradium.ai/api/speech/tts
GRADIUM_MODEL=default
GRADIUM_OUTPUT_FORMAT=wav

# ==============================================
# STORAGE (OPTIONAL)
# ==============================================

# Vercel Blob Storage (for production)
# Get from: https://vercel.com/docs/storage/vercel-blob
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token_here

# ==============================================
# LOCAL DEVELOPMENT (OPTIONAL)
# ==============================================

# Piper TTS (local fallback - Windows only)
# Download from: https://github.com/rhasspy/piper
PIPER_PATH="C:\\piper\\piper.exe"
PIPER_VOICES_DIR="C:\\piper\\voices"

# External Browser Service (for Playwright)
# BROWSERBASE_API_KEY=your_browserbase_key
# BROWSERBASE_PROJECT_ID=your_project_id
